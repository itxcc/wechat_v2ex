.topic-item{
  position: relative;
  display: block;
  width: 96%;
  margin:0 auto;
  color: black;
  padding: 8px 12px 6px 12px;
  font-size: 16px;
  text-align: left;
  border-bottom: 1px solid rgb(250,250,250);
}
.item_top{
  width: 100%;
  height: 40px;
  margin: 5px auto;
}
.item_intro{
  width: auto;
  height: 20px;
}
.item-avatar{
  width: 40px;
  height: 40px;
  border-radius: 2px;
}
.item-tag{
  font-size: 12px;
  width: auto;
  height: 20px;
  line-height: 20px;
  padding: 0 5px;
  background-color: rgb(242,242,242);
  color: rgb(204,204,204);
  text-align: center;
  margin-right: 5px;
  
}
.item-author{
  font-size: 12px;
  color: rgb(59,59,59);
  margin-left: 5px;
}
.item-title{
  display: block;
  font-size: 14px;
  margin: 4px auto;
}
.reply{
  font-size: 12px;
  color: rgb(204,204,204);
  line-height: 20px;
}
.last_reply{
  display: inline-block;
  height: 15px;
  font-size:12px;
  line-height: 15px;
  color: rgb(204,204,204);
  margin-left: 5px;
}
